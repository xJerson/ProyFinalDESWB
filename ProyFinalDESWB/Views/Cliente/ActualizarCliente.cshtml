@model ProyFinalDESWB.Models.ActualizarCliente

@{
    ViewData["Title"] = "ActualizarCliente";
}

<h1>ActualizarCliente</h1>

<h4>ActualizarCliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ActualizarCliente">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nombrescompletos" class="control-label"></label>
                <input asp-for="nombrescompletos" class="form-control" />
                <span asp-validation-for="nombrescompletos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dniruc" class="control-label"></label>
                <input asp-for="dniruc" class="form-control" />
                <span asp-validation-for="dniruc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="direccion" class="control-label"></label>
                <input asp-for="direccion" class="form-control" />
                <span asp-validation-for="direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="correo" class="control-label"></label>
                <input asp-for="correo" class="form-control" />
                <span asp-validation-for="correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tipocli" class="control-label"></label>
                @Html.DropDownList("tipocli", 
                (SelectList)ViewBag.TipoCli, "Seleccionar Tipo", new { @class = "form-select"})
                <span asp-validation-for="tipocli" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="codcliente" class="control-label"></label>
                <input asp-for="codcliente" class="form-control" />
                <span asp-validation-for="codcliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <p>@ViewBag.EmpleadoActu</p>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
