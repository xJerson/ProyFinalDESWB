@model ProyFinalDESWB.Models.GrabarCliente

@{
    ViewData["Title"] = "GrabarCliente";
}

<h1>GrabarCliente</h1>

<h4>GrabarCliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GrabarCliente">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nombres_completo" class="control-label"></label>
                <input asp-for="nombres_completo" class="form-control" />
                <span asp-validation-for="nombres_completo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dniruc" class="control-label"></label>
                <input asp-for="dniruc" class="form-control" />
                <span asp-validation-for="dniruc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="direccion" class="control-label"></label>
                <input asp-for="direccion" class="form-control" />
                <span asp-validation-for="direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="correo" class="control-label"></label>
                <input asp-for="correo" class="form-control" />
                <span asp-validation-for="correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tipocli" class="control-label"></label>
                @Html.DropDownList("tipocli", (SelectList)ViewBag.Tipos,
                "Seleccione", new { @class = "form-select" })
                <span asp-validation-for="tipocli" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<div class="alert alert-info">
    <p>
        @ViewBag.Mensaje
    </p>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
