@model ProyFinalDESWB.Models.SP_ACTUALIZAR_CONSULTOR

@{
    ViewData["Title"] = "ActualizarConsultor";
}

<h1>ActualizarConsultor</h1>

<h4>SP_BUSCAR_CONSULTOR</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ActualizarConsultor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="cod_consultores" class="control-label"></label>
                <input asp-for="cod_consultores" class="form-control"  readonly/>
                <span asp-validation-for="cod_consultores" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="apellido" class="control-label"></label>
                <input asp-for="apellido" class="form-control" />
                <span asp-validation-for="apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dni" class="control-label"></label>
                <input asp-for="dni" class="form-control" />
                <span asp-validation-for="dni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="correo" class="control-label"></label>
                <input asp-for="correo" class="form-control" />
                <span asp-validation-for="correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="codespecialidad" class="control-label"></label>
                @Html.DropDownList("codespecialidad", (SelectList)ViewBag.Especialidad, "Seleccione", new { @class = "form-select"})
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Actualizar Consultor" class="btn btn-primary" /> |
                <a asp-action="ListarConsultores" class="btn btn-info">Regresar al listado</a>
            </div>
        </form>
    </div>
</div>

<div>
    @ViewBag.Mensaje
</div>

